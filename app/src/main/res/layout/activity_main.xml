<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">


<!--Sliders of our app with text provided like zomato-->
<!--Login Page -->

<ImageView
    android:id="@+id/imgfood_bg"
    android:layout_width="500dp"
    android:layout_height="280dp"
    android:src="@drawable/food_bg" />

<EditText
    android:id="@+id/etname"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/enter_your_name"
    android:layout_below="@+id/imgfood_bg"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:inputType="text"
    android:drawableLeft="@drawable/ic_enter_name"
    android:maxLines="2"
    android:maxLength="50"
    android:drawablePadding="5dp"/>

<EditText
    android:id="@+id/etemail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter your mail id"
    android:layout_below="@+id/etname"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:inputType="text"
    android:drawableLeft="@drawable/ic_email_id"
    android:maxLines="2"
    android:maxLength="50"
    android:drawablePadding="5dp"/>

<EditText
    android:id="@+id/etphone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter phone number"
    android:layout_below="@+id/etemail"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:inputType="number"
    android:drawableLeft="@drawable/ic_phone_number"
    android:maxLines="1"
    android:maxLength="10"
    android:drawablePadding="5dp"/>

<Button
    android:id="@+id/btnlogin"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:text="@string/login"
    android:layout_centerInParent="true"
    android:textColor="#ffffff"
    android:background="#4fc3f7"
    android:textSize="20sp"
    android:layout_below="@+id/etphone"
    android:padding="10dp"
    android:layout_margin="30dp"/>

<TextView
    android:id="@+id/txtregister"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/btnlogin"
    android:layout_margin="3dp"
    android:layout_centerInParent="true"
    android:text="@string/register"
    android:textSize="20sp" />

<TextView
    android:id="@+id/txtwelcome"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="“After a good dinner one can forgive anybody,"
    android:layout_below="@+id/txtregister"
    android:textSize="15sp"
    android:layout_margin="10dp"
    android:layout_centerInParent="true"
    android:fontFamily="sans-serif"
    android:textColor="#000000"/>

<TextView
    android:id="@+id/txtwelcome2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/txtwelcome"
    android:layout_centerInParent="true"
    android:fontFamily="sans-serif"
    android:text=" even one's own relations.”"
    android:textColor="#000000"
    android:textSize="15sp" />

<TextView
    android:id="@+id/txtwelcome3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/txtwelcome2"
    android:fontFamily="sans-serif"
    android:text="-Oscar Wilde"
    android:textColor="#000000"
    android:layout_margin="20dp"
    android:layout_alignParentRight="true"
    android:textSize="25sp" />


</RelativeLayout>